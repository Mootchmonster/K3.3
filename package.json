{
    "name": "k3.3",
    "version": "3.3.0",
    "description": "Island Rush V3 with Typescript",
    "main": "server.js",
    "scripts": {
        "start": "node ./dist/server.js",
        "devBackend": "nodemon ./src/server.ts",
        "devFrontend": "cd ./src/react-client && npm start",
        "dev": "concurrently \"npm:devBackend\" \"npm:devFrontend\"",
        "compileBackend": "tsc -p .",
        "buildClient": "cd ./src/react-client && npm run build && cd ../..",
        "moveFrontend": "copyfiles -u 1 ./src/react-client/build/**/*.* ./dist",
        "build": "npm run compileBackend && npm run buildClient && npm run moveFrontend"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/island-rush/K3.3.git"
    },
    "author": "Spencer Adolph",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/island-rush/K3.3/issues"
    },
    "homepage": "https://github.com/island-rush/K3.3#readme",
    "devDependencies": {
        "@types/express": "^4.17.2",
        "@types/express-session": "^1.15.16",
        "@types/express-socket.io-session": "^1.3.2",
        "@types/md5": "^2.1.33",
        "@types/mysql2": "github:types/mysql2",
        "@types/node": "^12.12.17",
        "@types/socket.io": "^2.1.4",
        "concurrently": "^5.0.1",
        "copyfiles": "^2.1.1",
        "nodemon": "^2.0.2",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.3"
    },
    "dependencies": {
        "connect-loki": "^1.1.0",
        "express": "^4.17.1",
        "express-session": "^1.17.0",
        "express-socket.io-session": "^1.3.5",
        "md5": "^2.2.1",
        "mysql2": "^2.0.2",
        "socket.io": "^2.3.0"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "printWidth": 150
    },
    "nodemonConfig": {
        "ignore": [
            "src/react-client/*"
        ]
    }
}
